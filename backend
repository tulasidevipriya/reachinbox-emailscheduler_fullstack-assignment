import { PrismaClient } from '@prisma/client';

const globalForPrisma = global as unknown as { prisma: PrismaClient };

export const prisma = globalForPrisma.prisma || new PrismaClient();

if (process.env.NODE_ENV !== 'production') globalForPrisma.prisma = prisma;

import { emailQueue } from '../lib/queue';
import { prisma } from '../lib/prisma';

export const queueEmailCampaign = async (payload: any) => {
  const { leads, subject, body, startTime, delayInSeconds, userId } = payload;

  const jobPromises = leads.map(async (email: string, index: number) => {
    // 1. Calculate the exact execution time
    const scheduledAt = new Date(new Date(startTime).getTime() + index * delayInSeconds * 1000);
    const delay = Math.max(0, scheduledAt.getTime() - Date.now());

    // 2. Create DB record first (Persistence)
    const emailJob = await prisma.emailJob.create({
      data: {
        recipient: email,
        subject,
        body,
        scheduledAt,
        userId,
        status: 'PENDING'
      }
    });

    // 3. Add to BullMQ using the DB ID as jobId (Idempotency)
    return emailQueue.add(
      'send-email',
      { dbId: emailJob.id, email, subject, body },
      { 
        delay, 
        jobId: emailJob.id,
        removeOnComplete: true 
      }
    );
  });

  return Promise.all(jobPromises);
};

import { Worker, Job } from 'bullmq';
import nodemailer from 'nodemailer';
import { redisConnection } from '../lib/queue';
import { prisma } from '../lib/prisma';

// Ethereal Transporter
const transporter = nodemailer.createTransport({
  host: process.env.SMTP_HOST,
  port: Number(process.env.SMTP_PORT),
  auth: { user: process.env.SMTP_USER, pass: process.env.SMTP_PASS }
});

export const startWorker = () => {
  const worker = new Worker('email-sending-queue', async (job: Job) => {
    const { dbId, email, subject, body } = job.data;

    // --- RATE LIMITING (Hourly Window) ---
    const hourKey = `rate-limit:${new Date().toISOString().substring(0, 13)}`;
    const count = await job.client.incr(hourKey);
    if (count === 1) await job.client.expire(hourKey, 3600);

    const LIMIT = Number(process.env.MAX_EMAILS_PER_HOUR);
    if (count > LIMIT) {
      // Delay job to the next hour
      await job.moveToDelayed(Date.now() + 3600000, job.token);
      return;
    }

    try {
      // --- SMTP SENDING ---
      const info = await transporter.sendMail({
        from: '"ReachInbox AI" <outreach@reachinbox.ai>',
        to: email,
        subject,
        text: body,
      });

      // Update DB to SENT
      await prisma.emailJob.update({
        where: { id: dbId },
        data: { status: 'SENT', sentAt: new Date(), error: nodemailer.getTestMessageUrl(info) || null }
      });

    } catch (err: any) {
      await prisma.emailJob.update({
        where: { id: dbId },
        data: { status: 'FAILED', error: err.message }
      });
      throw err; // Trigger BullMQ retry
    }
  }, { 
    connection: redisConnection,
    concurrency: 5 // Requirement: Configurable concurrency
  });

  console.log('ðŸš€ Worker initialized and listening for jobs...');
};

import express from 'express';
import cors from 'cors';
import dotenv from 'dotenv';
import { queueEmailCampaign } from './services/scheduler';
import { startWorker } from './workers/emailWorker';
import { prisma } from './lib/prisma';

dotenv.config();

const app = express();
app.use(cors());
app.use(express.json());

// API: Schedule Campaign
app.post('/api/emails/schedule', async (req, res) => {
  try {
    await queueEmailCampaign(req.body);
    res.status(202).json({ success: true, message: 'Campaign queued successfully' });
  } catch (error: any) {
    res.status(500).json({ success: false, error: error.message });
  }
});

// API: List Jobs (For Frontend Dashboard)
app.get('/api/emails/list', async (req, res) => {
  const jobs = await prisma.emailJob.findMany({
    orderBy: { scheduledAt: 'desc' },
    take: 50
  });
  res.json(jobs);
});

// Start the Background Worker
startWorker();

const PORT = process.env.PORT || 5000;
app.listen(PORT, () => console.log(`âœ… Backend listening on port ${PORT}`));
